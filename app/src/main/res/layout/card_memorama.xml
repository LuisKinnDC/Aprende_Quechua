<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_margin="4dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:rippleColor="@color/color_400"
    app:strokeColor="@color/color_700"
    app:strokeWidth="1dp">

    <!-- Contenedor principal con fondo animado -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="12dp">

        <!-- Imagen con efecto de escala -->
        <ImageView
            android:id="@+id/imgCarta"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:scaleType="centerCrop"
            android:contentDescription="Carta del memorama"
            tools:src="@drawable/ic_card_back"/>

        <!-- Texto con estilo moderno -->
        <TextView
            android:id="@+id/txtNombreCarta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="center"
            android:textColor="@color/color_900"
            android:layout_marginTop="8dp"
            style="@style/TextAppearance.Material3.LabelMedium"/>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>