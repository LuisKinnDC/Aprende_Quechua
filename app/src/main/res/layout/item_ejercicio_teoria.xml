<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="12dp"
    app:strokeColor="@color/color_200"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/txtTituloTeoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Título"
            android:textColor="@color/color_950"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtContenidoTeoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contenido explicativo"
            android:textColor="@color/color_600"
            android:textSize="14sp"
            android:layout_marginTop="8dp" />

        <ImageView
            android:id="@+id/imgTeoria"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="12dp"
            android:scaleType="centerCrop"
            android:contentDescription="Imagen teoría"
            android:background="@color/color_200"
            android:visibility="gone" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
